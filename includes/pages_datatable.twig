{% block pages_datatable_content %}

    <div id="en_pages_datatable_div" class="wrap">
        <h2>{{ __( 'EN Pages', 'planet4-engagingnetworks' ) }} #2</h2>
        <br />

        {{ fn( 'settings_errors' ) }}

        <form id="p4en_pages_settings_form" name="p4en_pages_settings_form" method="post" action="options.php">
            {{ fn( 'settings_fields', 'p4en_pages_settings_group' ) }}
            {{ fn( 'do_settings_sections', 'p4en_pages_settings_group' ) }}

            <div id="p4en_pages_datatable_filters">
                <select id="p4en_pages_subtype" name="p4en_pages_settings[p4en_pages_subtype]">
                    <option selected disabled>- {{ _e( 'Select Subtype', 'planet4-engagingnetworks' ) }} -</option>
                    {% for key, subtype in subtypes %}
                        {% if key == pages_settings.p4en_pages_subtype %}
                            <option value="{{ key|e('html_attr') }}" selected >{{ subtype['subType']|e('html') }}</option>
                        {% else %}
                            <option value="{{ key|e('html_attr') }}">{{ subtype['subType']|e('html') }}</option>
                        {% endif %}
                    {% endfor %}
                </select>

                <select id="p4en_pages_status" name="p4en_pages_settings[p4en_pages_status]">
                    <option selected disabled>- {{ _e( 'Select Status', 'planet4-engagingnetworks' ) }} -</option>
                    {% for key, status in statuses %}
                        {% if key == pages_settings.p4en_pages_status %}
                            <option value="{{ key|e('html_attr') }}" selected >{{ status|e('html') }}</option>
                        {% else %}
                            <option value="{{ key|e('html_attr') }}">{{ status|e('html') }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
                {{ fn( 'submit_button', __( 'Save Changes', 'planet4-engagingnetworks' ), 'primary', 'p4en_pages_datatable_settings_save_button' ) }}
            </div>
        </form>

        <table id="en_pages_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr valign="top">
                <th>{{ __( 'ID', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Type', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Name', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Created', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Modified', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Status', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Title', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Subtype', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Actions', 'planet4-engagingnetworks' ) }}</th>
            </tr>
            </thead>
            <tfoot>
            <tr valign="top">
                <th>{{ __( 'ID', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Type', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Name', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Created', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Modified', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Status', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Title', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Subtype', 'planet4-engagingnetworks' ) }}</th>
                <th>{{ __( 'Actions', 'planet4-engagingnetworks' ) }}</th>
            </tr>
            </tfoot>
            {% for page in pages %}
                <tr valign="top">
                    <td>
                        {{ page['id']|e('html') }}
                    </td>
                    <td>
                        {{ (subtypes[ page['subType'] ]['type'])|e('html') }}
                    </td>
                    <td>
                        <a class="p4en_link" href="{{ page.url|e('html_attr') }}" title="" data-title="Open page in new tab" target="_blank">{{ page['name']|e('html') }}</a>
                    </td>
                    <td>
                        {% if ( page['createdOn'] ) %}
                            {{ (page['createdOn'] / 1000)|date('M d, Y')|e('html') }}
                        {% endif %}
                    </td>
                    <td>
                        {% if ( page['modifiedOn'] ) %}
                            {{ (page['modifiedOn'] / 1000)|date('M d, Y')|e('html') }}
                        {% endif %}
                    </td>
                    <td>
                        {{ page['campaignStatus']|e('html') }}
                    </td>
                    <td>
                        {{ page['title']|e('html') }}
                    </td>
                    <td>
                        {{ (subtypes[ page['subType'] ]['subType'])|e('html') }}
                    </td>
                    <td>
                        <a class="p4en_link do_copy" href="" data-href="{{ page.url|e('html_attr') }}" title=""  data-title="Copy link">
                            <i class="dashicons dashicons-admin-links"></i>
                        </a>
                        <a class="p4en_link" href="https://e-activist.com/ea-page/auth/iframemodule.jsp?menu=page%20builder&module=manage%20pages" title=""  data-title="Edit in EN" target="_blank">
                            <i class="dashicons dashicons-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="clear"></div>

{% endblock %}

<script type="application/javascript">
    jQuery(document).ready(function() {
        $('#en_pages_table').DataTable();
    } );
</script>